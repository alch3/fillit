#include "ft_fillit.h"

t_list	*ft_validtolst(int fd)
{
	char		buf[22];
	int			ret;
	int			index;
	t_list		*elem;

	index = 0;
	while ((ret = read(fd, buf, 21)))
	{
		buf[ret] = 0;
		elem = ft_lstaddlast(elem, index++, buf);
//		ft_putstr(element->tetrimino);
	}
	return();
}










